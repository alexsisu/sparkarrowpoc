                                                <exclude>**/logback.xml</exclude>
                                                <exclude>**/*-env.sh</exclude>
                                                <exclude>**/log4j.properties</exclude>
                                                <exclude>META-INF/*.SF</exclude>
                                                <exclude>META-INF/*.DSA</exclude>
                                                <exclude>META-INF/*.RSA</exclude>
                                            </excludes>
                                        </filter>
                                    </filters>
                                    <transformers>
