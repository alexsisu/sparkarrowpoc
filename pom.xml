                                <id>pack-project</id>
                                <phase>install</phase>
                                <configuration>
                                    <tasks name="Copy jar and config files to output'">
                                        <copy file="${project.basedir}/src/main/resources/logback.xml"
                                              todir="${basedir}/target/output/conf"/>
                                        <copy file="${project.basedir}/src/main/resources/logback.xml"
                                              todir="${basedir}/target/output"/>
                                        <copy file="${project.basedir}/src/main/resources/logback.xml"
                                              todir="${basedir}/target/classes"/>

                                    </tasks>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
